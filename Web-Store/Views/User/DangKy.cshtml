
@{
    ViewBag.Title = "DangKy";
}

<div class="background-sign-up">
    <div class="sign_up" align="center">
        <h2 style=" margin-top:20px; text-align:center"> Đăng Ký Thanh Viên</h2>
        <table>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr class="post-item2" style="height: 40px">
                    <td> Họ Và Tên Khách Hàng: </td>
                    <td>
                        @Html.TextBox("HoTenKH")
                        @ViewData["Loi1"]
                    </td>
                </tr>
                <tr class="post-item2" style="height:40px">
                    <td> Tên Đăng Nhập: </td>
                    <td>
                        @Html.TextBox("TenDN")
                        @ViewData["Loi2"]
                    </td>
                </tr>
                <tr class="post-item2" style="height:40px">
                    <td> Mật Khẩu:</td>
                    <td>
                        @Html.Password("Matkhau")
                        @ViewData["Loi3"]
                    </td>
                </tr>
                <tr class="post-item2" style="height:40px">
                    <td> Nhập Lại Mật Khẩu: </td>
                    <td>
                        @Html.Password("Matkhaunhaplai")
                        @ViewData["Loi4"]
                    </td>
                </tr>

                <tr class="post-item2" style="height:40px">
                    <td> Số Điện Thoại: </td>
                    <td>
                        @Html.TextBox("DienThoai")
                        @ViewData["Loi6"]
                    </td>
                </tr>
                <tr class="post-item2" style="height:40px">
                    <td> Email:</td>
                    <td>
                        @Html.TextBox("Email")
                        @ViewData["Loi5"]
                    </td>
                </tr>
                <tr class="post-item2" style="height:40px">
                    <td> Địa chỉ:</td>
                    <td>
                        @Html.TextBox("Diachi")
                    </td>
                </tr>
                <tr class="post-item2" style="height:40px">
                    <td> Ngày Sinh: </td>
                    <td>
                        <input type="date" name="Ngaysinh" />
                    </td>
                </tr>
                <tr class="post-item2" style="height:40px">
                    <td></td>
                    <td class="btn-sign_up">
                        <input type="submit" value=" Đăng Ký " />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

