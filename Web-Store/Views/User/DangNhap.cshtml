@{
    ViewBag.Title = "Dangnhap";
}

<div class="signin">
    <h4 style="color:red; text-align:center"> @ViewBag.Thongbao</h4>
    <div class="login-box">
        <h2 style="text-align:center;margin-bottom:20px;">Đăng nhập</h2>
        <table>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <tr class="user-box" style="height: 40px">
                    <td>Tài khoản:</td>
                    <td>
                        @Html.TextBox("TenDN")
                        @ViewData["Loi1"]
                    </td>

                </tr>
                <tr class="user-box" style="height: 40px">
                    <td>Mật khẩu:</td>
                    <td>
                        @Html.Password("Matkhau")
                        @ViewData["Loi2"]
                    </td>

                </tr>
                <tr style="height:40px">
                    <td></td>
                    <td>
                        <input type="Submit" value="Đăng nhập" />
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

