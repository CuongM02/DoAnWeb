<script>
    const wrapper = document.querySelector(".sliderWrapper");
    function first(yasin) {
        wrapper.style.transform = "translateX(" + yasin + "vw)";
    }
    function add() {
        shoes = document.querySelector(".bottom");
        bilgecanDede = document.querySelector(".down");

        shoes.classList.toggle('active');

        if (bilgecanDede.getAttribute("status") == "active") {
            bilgecanDede.innerHTML = "<i class='fa-solid fa-angles-up fa-2x'></i>";
            bilgecanDede.setAttribute("status", "disable")
        }
        else {
            bilgecanDede.innerHTML = "<i class='fa-solid fa-angles-down fa-2x'></i>";
            bilgecanDede.setAttribute("status", "active")
        }
    }
</script>