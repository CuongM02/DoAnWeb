@model IEnumerable<Web_Store.Model.Admin>

@{
    ViewBag.Title = "Trang quản lý Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TRANG QUẢN LÝ ADMIN</h2>

<table class="table" >
    <tr>
        <th>
            Họ tên
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Tên đăng nhập
        </th>       
        <th>
            Email
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TK)
            </td>         
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id=item.MaAdmin }) |
                @Html.ActionLink("Xóa", "Delete", new { id=item.MaAdmin })
            </td>
        </tr>
    }   

</table>
